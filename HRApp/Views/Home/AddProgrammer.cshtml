@{
}
<div class="container">
    <br />
    <h1>New Employee Form</h1>
    <br />
    <div class="container">
        <div class="card w-75" style="float: center;margin: 0 auto;">
            <div class="card-body">
                <h5 class="card-title">Please fill in the new employee details</h5>
                <form action="/home/AddProgrammerToList" method="post">
                    <div class="form-group row">
                        <label for="Name" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Name" value="Full Name" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="ID" class="col-sm-2 col-form-label">ID</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="ID" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Role" class="col-sm-2 col-form-label">Role</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Role" />
                        </div>
                    </div>
                    <input type="submit" class="btn btn-outline-dark align-right" value="Login" style="float: right;" />
                </form>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <br />
    <h5>
        Role should be exactly one of this list.
    </h5>
    <h6>
        JUNIOR
    </h6>
    <h6>
        SENIOR
    </h6>
    <h6>
        LEADER
    </h6>
    <h6>
        ARCHITECT
    </h6>
</div>